{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["./src/.umi/*"],
      "@@test/*": ["./src/.umi-test/*"]
    }
  },
  "include": ["./src", "./types", "./config", "./**/*.ts", "./**/*.tsx", "./**/*.d.ts"],
  "exclude": ["node_modules"],
  "compileOnSave": false
}
